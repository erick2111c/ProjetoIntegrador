<Page x:Class="WpfApp1.FinalizarCompra"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="FinalizarCompra"
      Background="Transparent">

    <Page.Resources>
        <!-- Estilo reutilizável para TextBox arredondado -->
        <Style x:Key="RoundedTextBox" TargetType="TextBox">
            <Setter Property="Height" Value="36"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Background" Value="#1A1A1A"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#555"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border CornerRadius="18"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                Padding="{TemplateBinding Padding}">
                            <ScrollViewer x:Name="PART_ContentHost" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Estilo para labels -->
        <Style x:Key="FieldLabel" TargetType="Label">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Margin" Value="0,0,0,6"/>
        </Style>
    </Page.Resources>

    <Grid>
        <!-- Fundo: usei o arquivo que você subiu -->
        <Grid.Background>
            <ImageBrush ImageSource="file:///mnt/data/da6323ff-d2f2-4361-b74b-11218176c504.png"
                        Stretch="UniformToFill"/>
        </Grid.Background>

        <!-- Conteúdo principal centralizado com largura fixa para manter proporção -->
        <Border HorizontalAlignment="Center" VerticalAlignment="Center"
                Width="1000" Height="620" Background="#00000033" CornerRadius="16" Padding="28">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="40" />
                    <!-- espaço entre colunas -->
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!-- Coluna esquerda: dados pessoais -->
                <StackPanel Grid.Column="0" VerticalAlignment="Top">
                    <TextBlock Text="FAÇA SEU CADASTRO" Foreground="White" FontSize="18" FontWeight="Bold" Margin="0,0,0,14" HorizontalAlignment="Center"/>

                    <UniformGrid Columns="2" Rows="3" Margin="0,0,0,10" HorizontalAlignment="Stretch" VerticalAlignment="Top">
                        <!-- Linha 1 -->
                        <StackPanel Margin="8">
                            <Label Style="{StaticResource FieldLabel}" Content="Nome"/>
                            <TextBox Style="{StaticResource RoundedTextBox}" />
                        </StackPanel>
                        <StackPanel Margin="8">
                            <Label Style="{StaticResource FieldLabel}" Content="Sobrenome"/>
                            <TextBox Style="{StaticResource RoundedTextBox}" />
                        </StackPanel>

                        <!-- Linha 2 -->
                        <StackPanel Margin="8">
                            <Label Style="{StaticResource FieldLabel}" Content="Telefone"/>
                            <TextBox Style="{StaticResource RoundedTextBox}" />
                        </StackPanel>
                        <StackPanel Margin="8">
                            <Label Style="{StaticResource FieldLabel}" Content="CEP"/>
                            <TextBox Style="{StaticResource RoundedTextBox}" />
                        </StackPanel>

                        <!-- Linha 3 -->
                        <StackPanel Margin="8">
                            <Label Style="{StaticResource FieldLabel}" Content="Endereço"/>
                            <TextBox Style="{StaticResource RoundedTextBox}" />
                        </StackPanel>
                        <StackPanel Margin="8">
                            <Label Style="{StaticResource FieldLabel}" Content="Número"/>
                            <TextBox Style="{StaticResource RoundedTextBox}" />
                        </StackPanel>
                    </UniformGrid>

                    <!-- Campo cidade ocupando a largura -->
                    <StackPanel Margin="8,6,8,0">
                        <Label Style="{StaticResource FieldLabel}" Content="Cidade"/>
                        <TextBox Style="{StaticResource RoundedTextBox}" />
                    </StackPanel>
                </StackPanel>

                <!-- Coluna direita: pagamento -->
                <StackPanel Grid.Column="2" VerticalAlignment="Top">
                    <TextBlock Text="Pagamento" Foreground="White" FontSize="18" FontWeight="Bold" Margin="0,0,0,14" HorizontalAlignment="Center"/>

                    <StackPanel Margin="8">
                        <Label Style="{StaticResource FieldLabel}" Content="Número do cartão"/>
                        <TextBox Style="{StaticResource RoundedTextBox}" />
                    </StackPanel>

                    <UniformGrid Columns="2" Margin="0,8,0,0">
                        <StackPanel Margin="8">
                            <Label Style="{StaticResource FieldLabel}" Content="Data de vencimento"/>
                            <TextBox Style="{StaticResource RoundedTextBox}" />
                        </StackPanel>
                        <StackPanel Margin="8">
                            <Label Style="{StaticResource FieldLabel}" Content="CVC"/>
                            <TextBox Style="{StaticResource RoundedTextBox}" />
                        </StackPanel>
                    </UniformGrid>

                    <StackPanel Margin="8,8,8,0">
                        <Label Style="{StaticResource FieldLabel}" Content="Nome no cartão"/>
                        <TextBox Style="{StaticResource RoundedTextBox}" />
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="8,18,8,0">
                        <Button Content="VOLTAR" Width="110" Height="36" Margin="0,0,8,0" Click="btnVoltar_Click"/>
                        <Button Content="CONCLUIR" Width="140" Height="36" Click="btnConcluir_Click"/>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Page>