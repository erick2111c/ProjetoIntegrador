<Page x:Class="WpfApp1.ComprarTenis"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignHeight="720" d:DesignWidth="1280"
      Title="ComprarTenis">

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/Tela de Compra (1).png" Stretch="UniformToFill"/>
        </Grid.Background>

        <Viewbox Stretch="Uniform">
            <Grid Width="1280" Height="720">
                <Grid.Resources>
                    <Style x:Key="ComprarButtonStyle" TargetType="Button">
                        <Setter Property="Width" Value="250"/>
                        <Setter Property="Height" Value="40"/>
                        <Setter Property="Background" Value="#FF0C7272"/>
                        <Setter Property="Foreground" Value="White"/>
                        <Setter Property="FontSize" Value="20"/>
                        <Setter Property="FontWeight" Value="SemiBold"/>
                        <Setter Property="BorderBrush" Value="#FF0C7272"/>
                        <Setter Property="Cursor" Value="Hand"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}"
                                            BorderBrush="{TemplateBinding BorderBrush}"
                                            BorderThickness="{TemplateBinding BorderThickness}"
                                            CornerRadius="5">
                                        <ContentPresenter HorizontalAlignment="Center"
                                                          VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Grid.Resources>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="50"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="50"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="100"/>
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="250"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="100"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="1" Grid.Column="1"/>

                <Grid Grid.Row="1" Grid.Column="3"/>

                <Grid Grid.Row="1" Grid.Column="5"/>
                <Button Content="" HorizontalAlignment="Left" Margin="50,60,0,0" Grid.Row="2" Width="290" Grid.ColumnSpan="2" Foreground="{x:Null}" Background="#FF0C7272" Click="Button_Click_1" FontSize="22" Opacity="0"/>
                <!-- BOTÃO EM CIMA DA IMAGEM -->
                <Button Content="COMPRAR"
FontSize="18"
Width="184"
Height="24"
Background="#FF0C7272"
Foreground="White"
BorderBrush="#FF0C7272"
HorizontalAlignment="Left"
VerticalAlignment="Top"
Margin="10,50,0,0" Click="Button_Click_1" Grid.Column="1" Grid.Row="2"/>
            </Grid>
        </Viewbox>
    </Grid>
</Page>