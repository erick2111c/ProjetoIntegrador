    <Grid>
        <!-- COLUNA PRINCIPAL -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <!-- CONTAINER COM A IMAGEM -->
        <Grid>
            <Image Source="/Tela de Compra (1).png"
